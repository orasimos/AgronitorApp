<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/greenhouseCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    app:cardBackgroundColor="@color/white"
    app:strokeWidth="0dp"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="10dp"
    app:cardMaxElevation="12dp"
    app:cardElevation="10dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/greenhouseCardViewLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:weightSum="10">

        <RelativeLayout
            android:id="@+id/greenhouseCardViewRL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="10dp"
            android:layout_weight="8">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/greenhouseIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/greenhouse_img"
                android:scaleType="fitCenter"
                android:maxHeight="50dp"
                android:maxWidth="50dp"
                android:adjustViewBounds="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/greenhouseNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/greenhouse_name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/greenhouseIV"
                android:layout_marginStart="50dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>